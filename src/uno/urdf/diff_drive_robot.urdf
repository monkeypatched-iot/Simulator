<robot name="diff_drive_robot">

    <!--............................... MATERIALS ..................................... -->
    <material name="blue">
        <color rgba="0 0.4 0.5 1"/>
    </material>
    <material name="invisible">
        <color rgba="0.0 0.0 0.0 0.0"/>
    </material>

    <!--............................... LINKS ..................................... -->

    <link name="camera_link_optical"></link>
    <link name="imu_link"></link>
    <link name="world"></link>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.25 0.15 0.02"/> <!-- Increased size for stability -->
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.25 0.15 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.6"/> <!-- Increased mass -->
            <inertia ixx="0.0005" iyy="0.0015" izz="0.0025"/>
        </inertial>
    </link>

    <link name="chassis_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.25 0.15 0.02"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.25 0.15 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="0.0005" iyy="0.0015" izz="0.0025"/>
        </inertial>
    </link>

    <!-- Wheel links -->
    <link name="front_right_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/> <!-- Increased radius and length -->
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.3"/> <!-- Increased mass -->
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0002"/>
        </inertial>
    </link>

    <link name="front_left_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0002"/>
        </inertial>
    </link>

    <link name="rear_right_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0002"/>
        </inertial>
    </link>

    <link name="rear_left_wheel_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0002"/>
        </inertial>
    </link>

    <!-- Virtual wheels remain unchanged -->

    <joint name="joint_chassis_front_right_wheel" type="continuous">
        <parent link="chassis_link"/>
        <child link="front_right_wheel_link"/>
        <origin xyz="0.06 0.065 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="50.0" velocity="3.0"/> <!-- Adjusted limits -->
        <dynamics damping="0.1"/>
    </joint>

    <joint name="joint_chassis_front_left_wheel" type="continuous">
        <parent link="chassis_link"/>
        <child link="front_left_wheel_link"/>
        <origin xyz="0.06 -0.065 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="50.0" velocity="3.0"/>
        <dynamics damping="0.1"/>
    </joint>

    <joint name="joint_chassis_rear_right_wheel" type="continuous">
        <parent link="chassis_link"/>
        <child link="rear_right_wheel_link"/>
        <origin xyz="-0.06 0.065 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="50.0" velocity="3.0"/>
        <dynamics damping="0.1"/>
    </joint>

    <joint name="joint_chassis_rear_left_wheel" type="continuous">
        <parent link="chassis_link"/>
        <child link="rear_left_wheel_link"/>
        <origin xyz="-0.06 -0.065 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="50.0" velocity="3.0"/>
        <dynamics damping="0.1"/>
    </joint>

    <!-- Other components remain unchanged -->
    
</robot>
